{
  "name": "LadeBug",
  "description": "Digital Companion for Developers",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "bookmarks",
    "http://www.blogger.com/",
    "http://www.google.com/",
    "http://*.google.com/",
    "unlimitedStorage", "alarms", "notifications", "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_title": "LadeBug Sound",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "resources/img/ladebug48.png",
      "128": "resources/img/ladebug128.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      },
      "description": "Opens LadeBug"
    }
  },
  "icons": {
    "48": "resources/img/ladebug48.png",
    "128": "resources/img/ladebug128.png"
  }
}
